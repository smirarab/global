#!/bin/bash

echo "USAGE: $0 [dir name] [rep number]"

dir=$1/R$2
REP=20

echo '+Group = "GRAD"
+Project = "COMPUTATIONAL_BIOLOGY"
+ProjectDescription = "Binning"

Universe = vanilla

Requirements = Arch == "X86_64" 

executable = '$WS_HOME'/global/src/shell/runraxml.best.sh

Log = logs/supergene-'$1'-R'$2'-condor.log

getEnv=True 
'>condor.$1.R$2

for x in `ls $dir`; do
  if [ -f `pwd`/$dir/$x/.done.raxml.gtrgamma.1 ]; then
    echo $x is done
  else
    echo "
 Arguments = $x 1 `pwd`/$dir supergene.fasta $REP
 Error=logs/$x-$1-$2-std.err
 Output=logs/$x-$1-$2-std.out
 Queue">>condor.$1.R$2
 fi
done

echo condor_submit condor.$1.R$2
